{
  "name": "@wmakeev/standard-response",
  "private": true,
  "version": "1.0.0",
  "description": "The standardized format of the server response",
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "lerna-test": "lerna run test",
    "test": "nyc --silent blue-tape packages/*/src/__tests__/**/*.test.js | tap-spec && nyc report --reporter=text --reporter=lcov",
    "coverage-report": "nyc report --reporter=text-lcov | coveralls",
    "publish": "lerna publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wmakeev/standard-response"
  },
  "bugs": {
    "url": "https://github.com/wmakeev/standard-response/issues"
  },
  "homepage": "https://github.com/wmakeev/standard-response",
  "keywords": [
    "standard",
    "response",
    "specification"
  ],
  "author": "Vitaliy V. Makeev",
  "engines": {
    "node": ">=4"
  },
  "devDependencies": {
    "debug": "^2.6.3",
    "blue-tape": "^1.0.0",
    "coveralls": "^2.12.0",
    "dotenv": "^4.0.0",
    "eslint": "^3.18.0",
    "eslint-config-standard": "^7.1.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^2.1.1",
    "lerna": "^2.0.0-rc.1",
    "nyc": "^10.2.0",
    "tap-spec": "^4.1.1"
  },
  "license": "ISC"
}
